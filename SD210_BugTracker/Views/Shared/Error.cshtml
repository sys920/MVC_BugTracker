@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Error";
}

    <div class="container-fluid">

        <div class="py-3">
            <h6 class="m-0 font-weight-bold text-primary">Internal Server Error !</h6>
        </div>
        <!-- Begin Page Content -->
        <div class="container-fluid">
            <div class="text-danger">
                <h4>Sorry about this error. It has been saved and will be fixed soon.</h4>
            </div>
            <div class="text-danger">
               [Error message detail : @ViewData["Exception"] ]               
            </div>

        </div>






        


